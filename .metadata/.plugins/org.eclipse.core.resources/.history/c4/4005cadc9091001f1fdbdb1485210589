<body>
	<div class="container mt-5">
		<h1 class="mb-4">Lista de Funcionários</h1>
		<a href="/funcionario" class="btn btn-success mb-3">Novo Funcionário</a>

		<table class="table table-hover table-striped">
			<thead class="table-dark">
				<tr>
					<th>NOME</th>
					<th>Função</th>
					<th>Data Admissão</th>
					<th>Salário</th>
					<th>Ações</th>
				</tr>
			</thead>
			<tbody>
				<tr th:each="funcionario : ${lista}">
					<td th:text="${funcionario.nome}"></td>
					<td th:text="${funcionario.funcao}"></td>
					<td th:text="${funcionario.dtadm}"></td>
					<td th:text="${funcionario.salario}"></td>
					<td>
						<a th:href="@{/funcionario/formFuncionario(id=${funcionario.id})}"
							class="btn btn-warning btn-sm">Editar</a>
						<form action="/funcionario" method="post" style="display:inline;">
							<input type="hidden" name="_method" value="delete">
							<input type="hidden" name="id" th:value="${funcionario.id}">
							<button type="submit" class="btn btn-danger btn-sm">Excluir</button>
						</form>
					</td>
				</tr>
			</tbody>
		</table>

		<!-- Paginação -->
		<nav aria-label="Page navigation example">
			<ul class="pagination justify-content-center">
				<li class="page-item" th:classappend="${pagina.isFirst() ? 'disabled' : ''}">
					<a class="page-link" th:href="@{/funcionario/listagem(page=${pagina.number - 1})}"
						aria-label="Previous">
						<span aria-hidden="true">&laquo;</span>
					</a>
				</li>

				<li class="page-item" th:each="i : ${#numbers.sequence(0, pagina.totalPages - 1)}"
					th:classappend="${pagina.number == i ? 'active' : ''}">
					<a class="page-link" th:href="@{/funcionario/listagem(page=${i})}" th:text="${i + 1}">1</a>
				</li>

				<li class="page-item" th:classappend="${pagina.isLast() ? 'disabled' : ''}">
					<a class="page-link" th:href="@{/funcionario/listagem(page=${pagina.number + 1})}"
						aria-label="Next">
						<span aria-hidden="true">&raquo;</span>
					</a>
				</li>
			</ul>
		</nav>
	</div>

	<!-- Bootstrap JS-->
