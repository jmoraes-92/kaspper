				<input type="hidden" th:if="${funcionario.id}" name="id" th:value="${funcionario.id}" />

				<label for="nome">Nome:</label>
				<input type="text" id="nome" name="nome" th:value="${funcionario.nome}" required />

				<label for="funcao">Função:</label>
				<input type="text" id="funcao" name="funcao" th:value="${funcionario.funcao}" required />

				<label for="dtadm">Data Admissão:</label>
				<input type="date" id="dtadm" name="dtadm" th:value="${funcionario.dtadm}" required />

				<label for="salario">Salário:</label>
				<input type="text" id="salario" name="salario" th:value="${funcionario.salario}" required />

				<input type="submit" value="Salvar" />
			</form>


